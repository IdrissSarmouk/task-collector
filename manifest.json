{
  "manifest_version": 3,
  "name": "Task Collector",
  "description": "Automatically collects and claims tasks with rate limiting",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://newsnoc/uiSNOC/main/service?cat=viewTaskPage_cs",
        "https://newsnoc/*"
      ],
      "js": ["autoCollector.js"],
      "run_at": "document_idle"
    }
  ]
}